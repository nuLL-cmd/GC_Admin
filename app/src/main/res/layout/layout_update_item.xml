<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background_bottom_sheet"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Situação do pedido"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:background="#7A7A7A"
        android:layout_height="2dp"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rd_pendente"
            android:layout_width="wrap_content"
            android:text="Pendente"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:id="@+id/rd_preparacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparação"/>

        <RadioButton
            android:id="@+id/rd_entregar"
            android:layout_width="wrap_content"
            android:text="Para entrega"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rd_entregue"
            android:text="Entregue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RadioGroup>
    <View
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:background="#7A7A7A"
    android:layout_height="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Altere a situação do pedido para que o mesmo possa ir para a proxima fase"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_send_status"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Enviar"
        android:background="@drawable/background_btn_login"
        android:textColor="#fff"
        android:layout_marginTop="10dp"/>

</LinearLayout>